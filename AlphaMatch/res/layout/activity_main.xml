<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|top"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/alpha" />

    <Button
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewBestTimeBtn_Main"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/viewBestTimeBtn_Main"
        android:layout_marginBottom="10dp"
        android:text="@string/quit" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewBestTimeBtn_Main"
        android:layout_alignLeft="@+id/viewBestTimeBtn_Main"
        android:layout_alignRight="@+id/viewBestTimeBtn_Main"
        android:layout_marginBottom="24dp"
        android:text="@string/start" />

    <Button
        android:id="@+id/viewBestTimeBtn_Main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/quit"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="@string/seeBestTimes" />

</RelativeLayout>